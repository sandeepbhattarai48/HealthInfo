<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/emergency_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_below="@+id/toolbar"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_background"/>

            <TextView
                    android:id="@+id/tv_emergency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="In an Emergency?"/>

            <Button
                    android:id="@+id/btn_callAmbulance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="24dp"
                    android:text="Call the Ambulance"
                    android:textAllCaps="false"/>

            <Button

                    android:id="@+id/btn_callhealthinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_callAmbulance"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="24dp"
                    android:text="Call Health Info"
                    android:textAllCaps="false"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="20dp">

                <LinearLayout
                        android:id="@+id/details_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/user_one_name"
                            android:drawablePadding="10dp"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/per"
                            android:hint="Name 1"/>

                    <TextView
                            android:id="@+id/user_one_phone"
                            android:layout_width="wrap_content"
                            android:drawablePadding="10dp"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
                            android:hint="Number 1"/>


                </LinearLayout>

                <ImageView
                        android:id="@+id/img_phone"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:scaleX="1.5"
                        android:scaleY="1.5"

                        android:layout_toLeftOf="@+id/img_edit"
                        android:background="@drawable/ic_phone_in_talk_black_24dp"/>

                <ImageView
                        android:clickable="true"
                        android:id="@+id/img_edit"
                        android:layout_marginTop="10dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_edit_black_24dp" android:layout_marginRight="14dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="20dp">

                <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/user_two_name"
                            android:drawablePadding="10dp"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/per"
                            android:hint="Name 2"/>

                    <TextView
                            android:id="@+id/user_two_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:drawablePadding="10dp"
                            android:drawableLeft="@drawable/ic_phone_in_talk_black_24dp"
                            android:hint="Number 2"/>


                </LinearLayout>

                <ImageView
                        android:id="@+id/img_phone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:scaleX="1.5"
                        android:layout_marginTop="10dp"

                        android:scaleY="1.5"
                        android:layout_toLeftOf="@+id/img_edit2"
                        android:background="@drawable/ic_phone_in_talk_black_24dp"/>

                <ImageView
                        android:clickable="true"
                        android:id="@+id/img_edit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_edit_black_24dp" android:layout_marginRight="14dp"/>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>