<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent"
        tools:context=".OneTimeActivityNumber">

    <TextView
            android:text="Please Input The Relatives Number in case of Emergency"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:paddingTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/user1_name"
                android:layout_width="match_parent"
                android:inputType="text"
                  android:layout_height="wrap_content"
                  android:hint="User one Name:"/>

        <EditText
                android:id="@+id/user1_phone" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                android:inputType="number"
                  android:hint="User's One Phone Number"/>
    </LinearLayout>


    <LinearLayout
            android:paddingTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/user2_name" android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                android:inputType="text"
                  android:hint="User Two Name:"/>


        <EditText
                android:id="@+id/user2_phone"
                android:inputType="number"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:hint="User's Two Phone Number"/>
    </LinearLayout>

    <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
    android:layout_gravity="center"/>
</LinearLayout>